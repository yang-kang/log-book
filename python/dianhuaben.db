#cursor.execute("drop table IF EXISTS "+str3)

sql="create table "+str3+"(id integer not null auto_increment,name varchar(15),relation varchar(20),tel varchar(15),count integer,PRIMARY KEY(`id`))"

cursor.execute(sql)
db.commit()

db.close()

